<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:gravity="center">

    <TextView
        android:id="@+id/textwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3D00"
        android:gravity="center"
        android:text="@string/bleaching_recipe"
        android:textColor="#FAEC53"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <HorizontalScrollView
        android:layout_width="412dp"
        android:layout_height="702dp"
        android:layout_below="@+id/textwo"
        android:layout_marginTop="2dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center|top">

                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="400dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="5dp"

                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_fabrics_gsm"
                        android:textColor="#FF0303"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <EditText
                        android:id="@+id/BeID"
                        android:layout_width="124dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/gsm"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second"
                    android:layout_width="410dp"
                    android:layout_height="98dp"
                    android:layout_below="@+id/first"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="336dp"
                        android:layout_height="52dp"
                        android:gravity="center"
                        android:text="@string/approximate_recipe"
                        android:textColor="#9E0505"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:gravity="center"
                        android:text="@string/chemical_composition_ml_kg_of_fabrics"
                        android:textColor="#9E0505"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/third"
                    android:layout_width="410dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_conveyer"
                        android:textColor="#021B4E"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:gravity="center"
                        android:text="@string/without_conveyer"
                        android:textColor="#021B4E"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/four"
                    android:layout_width="410dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/third"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gltext1ID"
                        android:layout_width="200dp"
                        android:layout_height="243dp"
                        android:layout_marginStart="10dp"
                        android:background="#FFFFFF"
                        android:hint=""
                        android:textColor="#000000"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/gltextID"
                        android:layout_width="200dp"
                        android:layout_height="243dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#FFFFFF"
                        android:hint=""
                        android:textColor="#000000"
                        android:textStyle="normal" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/four"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/BTNID"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/result"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/btn02"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/reset"
                        android:textColor="#020000"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>
        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>

