<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#03A9F4"
    android:gravity="center"
    tools:context=".InspectionCalculation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="4 Point System Calculation"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/texone"
        android:background="#FFFFFF"
        android:textColor="#07600B"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texone"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/li1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B8CFBD"
                    android:gravity="center"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Defects"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:textColor="#07600B" />

                    <EditText
                        android:id="@+id/edit01ID"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="Point"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textColorHint="#78909C"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/li2"
                    android:layout_below="@id/li1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B8CFBD"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Length of Yards"
                        android:layout_marginStart="20dp"
                        android:textColor="#07600B" />


                    <EditText
                        android:id="@+id/edit02ID"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="yards"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#020500"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li3"
                    android:layout_below="@id/li2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B8CFBD"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Actual Fabric Width"
                        android:layout_marginStart="20dp"
                        android:textColor="#07600B" />


                    <EditText
                        android:id="@+id/edit03ID"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/inch"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#020500"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/li4"
                    android:layout_below="@+id/li3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_detail"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="#59FF59"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li5"
                    android:layout_below="@+id/li4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points/100 Sq.YDS"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/tex01ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:hint="@string/dot"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/li5"
                    android:layout_marginTop="58dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/BTNID"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/result"
                        android:textColor="#099100"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/btn02ID"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/reset"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/li7"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="#00FF90"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gltext1ID"
                        android:layout_width="190dp"
                        android:layout_height="243dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bgcolor"
                        android:gravity="center"
                        android:text="@string/fourPoint"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/gltextID"
                        android:layout_width="202dp"
                        android:layout_height="243dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bgcolor"
                        android:gravity="center"
                        android:text="@string/grade"
                        android:textStyle="normal" />


                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </HorizontalScrollView>


</RelativeLayout>

