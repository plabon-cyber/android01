<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#03A9F4"
    tools:context=".MerceCon">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mercerizing_chemical_consumption"
        android:textStyle="bold"
        android:id="@+id/texone"
        android:background="#FFFFFF"
        android:textColor="#07600B"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texone"
        android:layout_marginTop="2dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B8CFBD"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/epi"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:textColor="#07600B" />

                    <EditText
                        android:id="@+id/edit03ID"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/inch"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        android:text="@string/warp_count"
                        android:textColor="#07600B" />


                    <EditText
                        android:id="@+id/edit01ID"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/ne"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B8CFBD"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="120dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/ppi"
                        android:layout_marginStart="20dp"
                        android:textColor="#07600B" />


                    <EditText
                        android:id="@+id/edit04ID"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="25dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/inch"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#020500"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:textStyle="bold"
                        android:text="@string/weft_count"
                        android:textColor="#07600B" />


                    <EditText
                        android:id="@+id/edit02ID"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/ne"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="180dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#B8CFBD"
                        android:text="@string/width"
                        android:textColor="#07600B"/>


                    <EditText
                        android:id="@+id/edit05ID"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/inch"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="#B8CFBD"
                        android:text="@string/fabrics_qty"
                        android:layout_marginStart="5dp"
                        android:textColor="#07600B" />


                    <EditText
                        android:id="@+id/fabricID"
                        android:layout_width="132dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/mtr"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="#8783FA"
                    android:layout_marginTop="230dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chemical_recipe"
                        android:textColor="#27E6F8"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290dp"
                    android:layout_marginStart="10dp">


                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="match_parent"
                        android:text="@string/caustic_soda"
                        android:textColor="#27E6F8"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />


                    <EditText
                        android:id="@+id/cbaumeid"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/be"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                    <EditText
                        android:id="@+id/rate1"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/rate"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                    <EditText
                        android:id="@+id/pickup"
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="Pickup %"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="350dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/glm"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />


                    <TextView
                        android:id="@+id/glmid"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:hint="@string/dot"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="390dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/caustic_flaks"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />


                    <TextView
                        android:id="@+id/causid"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:hint="@string/kgd"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="450dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_cost"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />


                    <TextView
                        android:id="@+id/tcost"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:hint="@string/kgd"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="500dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/per_meter_cost"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />


                    <TextView
                        android:id="@+id/pcost"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:hint="@string/kgd"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="399dp"
                    android:layout_height="84dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="540dp"
                    android:layout_marginRight="0dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/BTNID"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/result"
                        android:textColor="#099100"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/btn02ID"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/reset"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />


                </LinearLayout>


            </RelativeLayout>
        </ScrollView>
    </HorizontalScrollView>
</RelativeLayout>

