<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgcolor2"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3D00"
        android:gravity="center"
        android:text="@string/naoh_baume"
        android:textColor="#FAEC53"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/four"
        android:layout_marginTop="2dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/li1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="#B8CFBD"
                    android:layout_marginStart="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/caustic_baume"
                        android:textColor="#FF0303"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <EditText
                        android:id="@+id/BeID"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="@string/be"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/li1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/gram_per_liter"
                        android:textColor="#9E0505"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gltextID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="left"
                        android:hint="@string/g_l"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,TextContrastCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/li2"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/density"
                        android:textColor="#9E0505"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/den"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="left"
                        android:hint="@string/dot"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,TextContrastCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/li3"
                    android:id="@+id/five">

                    <Button
                        android:id="@+id/BTNID"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/result"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/btn02"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="50dp"
                        android:text="@string/reset"
                        android:textColor="#020000"
                        android:background="@android:drawable/checkbox_off_background"
                        android:textStyle="bold"
                        android:layout_marginEnd="30dp"
                        style="?android:attr/buttonBarButtonStyle" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="#B8CFBD"
                    android:layout_below="@id/five"
                    android:layout_marginStart="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caustic Soda Flakes"
                        android:textColor="#FF0303"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <EditText
                        android:id="@+id/gm1"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:background="#F6FBFA"
                        android:gravity="center"
                        android:hint="5gm-767gm"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/li6"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Approximate Caustic Baume"
                        android:textColor="#9E0505"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/be1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="left"
                        android:hint="@string/be"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded,TextContrastCheck" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/li7"
                    android:id="@+id/li9">

                    <Button
                        android:id="@+id/BTNID1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:background="@android:drawable/checkbox_off_background"
                        android:text="@string/result"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/rest1"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="50dp"
                        android:text="@string/reset"
                        android:textColor="#020000"
                        android:background="@android:drawable/checkbox_off_background"
                        android:textStyle="bold"
                        android:layout_marginEnd="30dp"
                        style="?android:attr/buttonBarButtonStyle" />


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </HorizontalScrollView>
</RelativeLayout>

